<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
					xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
					xmlns:my="clr-namespace:SL4PopupMenu;assembly=SL4PopupMenu" >

	<Style x:Key="PopupMenuWithBorderMaskStyle1" TargetType="my:PopupMenu">
		<Setter Property="BorderMaskFill" Value="#FFF9F9D8"/>
	</Style>


	<Style x:Key="MenuBaseStyle" TargetType="Control">
		<Setter Property="Background" Value="#FFF9F9D8"/>
		<Setter Property="Foreground" Value="DarkSlateBlue"/>
	</Style>

	<Style x:Key="MenuStyle1" TargetType="ListBox" BasedOn="{StaticResource MenuBaseStyle}">
		<Setter Property="BorderBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF5942AF" Offset="0"/>
					<GradientStop Color="#FF482D91" Offset="0.433"/>
					<GradientStop Color="#FF33236C" Offset="0.563"/>
					<GradientStop Color="#FF241656" Offset="1"/>
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>